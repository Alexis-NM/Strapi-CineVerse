{
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": "Genres TMDb"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "tmdb_id": {
            "type": "integer",
            "unique": true
        },
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "movies": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::movie.movie",
            "mappedBy": "categories"
        }
    }
}